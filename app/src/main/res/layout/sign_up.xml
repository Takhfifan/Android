<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layoutDirection="ltr"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_login_getKey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_10"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layoutDirection="ltr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/barg_64"
                    android:tint="@android:color/white" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="visible"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <com.example.takhfif01.widget.fonts.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="35dp"
                            android:text="ثبت نام"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:textColor="@color/green_500"
                            android:textSize="26sp"
                            android:textStyle="bold" />

                        <com.example.takhfif01.widget.fonts.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="نام"
                            android:textColor="@color/grey_60"
                            android:textSize="16sp" />
<!--
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/name_layout_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </com.google.android.material.textfield.TextInputLayout>
-->
                            <com.example.takhfif01.widget.fonts.MyEditText
                                android:id="@+id/name_signup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="-4dp"
                                android:layout_marginRight="-4dp"
                                android:inputType="text"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:theme="@style/EditText.Grey" />

                        <com.example.takhfif01.widget.fonts.MyTextView
                            android:id="@+id/error_name_signup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red_400"
                            android:textSize="12sp"
                            android:text="نام باید حداقل 3 حرف باشد!"
                            android:visibility="invisible"
                            />


                        <com.example.takhfif01.widget.fonts.MyTextView
                            android:layout_marginTop="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="نام خانوادگی"
                            android:textColor="@color/grey_60"
                            android:textSize="16sp" />
<!--
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/lastname_layout_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </com.google.android.material.textfield.TextInputLayout>
-->
                            <com.example.takhfif01.widget.fonts.MyEditText
                                android:id="@+id/lastname_signup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="-4dp"
                                android:layout_marginRight="-4dp"
                                android:inputType="text"
                                android:maxLength="35"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:theme="@style/EditText.Grey" />

                        <com.example.takhfif01.widget.fonts.MyTextView
                            android:id="@+id/error_lastname_signup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red_400"
                            android:textSize="12sp"
                            android:text="نام خانوادگی باید حداقل 4 حرف باشد!"
                            android:visibility="invisible"
                            />


                        <com.example.takhfif01.widget.fonts.MyTextView
                            android:layout_marginTop="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="شماره موبایل"
                            android:textColor="@color/grey_60"
                            android:textSize="16sp" />


<!--
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/number_layout_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </com.google.android.material.textfield.TextInputLayout>

                        -->
                            <com.example.takhfif01.widget.fonts.MyEditText
                                android:id="@+id/number_signup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="phone"
                                android:maxLength="11"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:theme="@style/EditText.Grey" />


                        <com.example.takhfif01.widget.fonts.MyTextView
                            android:id="@+id/error_number_signup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red_400"
                            android:textSize="12sp"
                            android:text="شماره ی خود را درست وارد کنید\nمثلا:09123456789"
                            android:visibility="invisible"
                            />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="10dp" />

                        <com.example.takhfif01.widget.fonts.MyButton
                            android:id="@+id/btn_login_getKey"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginLeft="-4dp"
                            android:layout_marginRight="-4dp"
                            android:background="@drawable/btn_rounded_primary"
                            android:text="دریافت کد فعال سازی"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="0dp"
                    android:layout_height="15dp" />

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>