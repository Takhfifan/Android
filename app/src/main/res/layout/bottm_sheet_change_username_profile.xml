<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.example.takhfif01.fonts.MyTextView
        android:textColor="#000"
        android:textSize="18sp"
        android:text="تغییر نام و نام خانوادگی"
        android:padding="16dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C6C6C6"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:padding="20dp">

    <com.example.takhfif01.fonts.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="نام"
        android:textColor="@color/grey_60"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name_layout_change_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.takhfif01.fonts.MyEditText
            android:focusedByDefault="false"
            android:id="@+id/name_change_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:inputType="text"
            android:maxLength="25"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:theme="@style/EditText.Grey" />
    </com.google.android.material.textfield.TextInputLayout>



    <com.example.takhfif01.fonts.MyTextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="نام خانوادگی"
        android:textColor="@color/grey_60"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/lastname_layout_change_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.takhfif01.fonts.MyEditText
            android:focusedByDefault="false"
            android:id="@+id/lastname_change_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:inputType="text"
            android:maxLength="35"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:theme="@style/EditText.Grey" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>

    <View
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C6C6C6"/>



    <com.example.takhfif01.fonts.MyButton
        android:id="@+id/btn_change_username"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="-4dp"
        android:layout_marginRight="-4dp"
        android:background="@drawable/btn_rounded_primary"
        android:text="تایید"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="8dp"/>


</LinearLayout>