<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:orientation="vertical">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/barg_64" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearInfo_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="right"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgArrowInfo_nav"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center|right"/>

                    <com.example.takhfif01.widget.fonts.MyTextView
                        android:id="@+id/txtUserName_nav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:text="ورود"
                        android:textColor="#FFF"
                        android:textSize="20sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:maxEms="5"
                        />

                    <ImageView
                        android:id="@+id/imgtxtInfo_nav"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_baseline_person_outline_48" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearMoreInfo_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="24dp"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <com.example.takhfif01.widget.fonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtInfo_nav"
                        android:text="نمایش اطلاعات کاربری"
                        android:textSize="14sp"
                        android:textColor="#FFF"
                        android:layout_marginBottom="8dp"/>

                    <com.example.takhfif01.widget.fonts.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtexit_nav"
                        android:text="خروج"
                        android:textSize="14sp"
                        android:textColor="#FFF"
                        android:layout_marginBottom="8dp"/>



                </LinearLayout>


                <LinearLayout
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:gravity="center|left|end"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp">


                        <com.example.takhfif01.widget.fonts.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="تومان"
                            android:textSize="13sp"/>

                        <com.example.takhfif01.widget.fonts.MyTextView
                            android:layout_marginLeft="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="2000000"/>


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:paddingRight="16dp">

                        <com.example.takhfif01.widget.fonts.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginRight="8dp"
                            android:text="موجودی"/>

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_baseline_account_balance_wallet_48"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:tint="@color/colorPrimary"/>

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/grey_300"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ListView
                        android:id="@+id/BuyMenuListView_nav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@android:color/transparent"
                        android:layoutDirection="rtl"/>
                </LinearLayout>

                <com.example.takhfif01.widget.fonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17sp"
                    android:layout_marginRight="8dp"
                    android:text="پیشنهادات"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/grey_300"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="175dp">

                    <ListView
                        android:id="@+id/productListView_nav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@android:color/transparent"
                        android:layoutDirection="rtl"
                        android:paddingTop="15dp"
                        />


                </LinearLayout>

                <com.example.takhfif01.widget.fonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17sp"
                    android:layout_marginRight="8dp"
                    android:text="تنظیمات"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/grey_300"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp">

                    <ListView

                        android:id="@+id/settingListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@android:color/transparent"
                        android:layoutDirection="rtl"
                        />
                </LinearLayout>



            </LinearLayout>


        </ScrollView>

    </com.google.android.material.navigation.NavigationView>
</LinearLayout>